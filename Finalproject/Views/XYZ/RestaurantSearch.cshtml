
@{
    ViewData["Title"] = "RestaurantSearch";
}

@model Finalproject.Models.XYZMenu

<h1>Nearby Restaurants</h1>
<h1>Please select your search distance</h1>
<div>
    <form action="/XYZ/RestaurantSearch" method="post">
        <input type="number" min="1" name="num" />
        <input type="submit" value="submit" />
    </form>
</div>
<table class="table table-active table-bordered table-striped table-warning table-dark" style="color:azure">
    <tr>
        <td>Name</td>
        <td>Address</td>
        <td>Phone</td>
        <td>Hours</td>
        <td>Cuisines</td>
        <td>Clink Link to Save to Planner</td>
    </tr>


    @foreach (var item in Model.result.data)
    {
        <tr>
            <td>@item.restaurant_name</td>
            <td>@item.address.formatted</td>
            <td>@item.restaurant_phone</td>
            <td>@item.hours</td>
            <td>
                @foreach (var cuisines in item.cuisines)
                {
                    <p>@cuisines</p>
                }
            </td>
            <td>@Html.ActionLink("Add to Planner", "AddFavorite", "FinalProjectDb", item)</td>

        </tr>
    }
</table>