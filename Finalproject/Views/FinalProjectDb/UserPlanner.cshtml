
@{
    ViewData["Title"] = "UserPlanner";
}

<h1>UserPlanner</h1>

@model IEnumerable<UserPlanner>

<table class="table table-active table-bordered table-striped table-warning table-dark" style="color:azure">
    <tr>
        <th>Notes</th>
        <th>Add/Edit</th>
        <th>Weather (F)</th>
        <th>Weather Summary</th>
        <th>Restaurants</th>
        <th>Dates</th>
        <th>To Remove Line Click Link</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Notes
            </td>
            <td>
                @Html.ActionLink("Edit Notes", "EditNote", "FinalProjectDb", item)
            </td>
            <td>@item.Weather</td>
            <td>@item.Events</td>
            <td>@item.Restaurants</td>
            <td>@item.Dates</td>
            <td>@Html.ActionLink("Remove from List", "RemovePlanner", "FinalProjectDb", item)</td>
        </tr>
    }
</table>
